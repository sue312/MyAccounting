<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    android这里是Linearlayout布局的背景颜色
    <solid android:color="#E2FFFFFF" />
<!--    这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="1dp"
        android:color="#5A5A5A" />

    <gradient
        android:type="sweep"
        android:angle="90"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#70EAEF"
        android:centerColor="#A2EA99"
        android:endColor="#25f1ef"
        android:gradientRadius="5dp"
        android:useLevel="false" />

    <!--    角的话，里边有参数可以单独设置-->
    <corners
        android:radius="60dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"/>

</shape>